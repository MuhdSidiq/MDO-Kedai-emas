{
    "name": "kedai-emas/gold-shop",
    "description": "Gold shop web application for displaying and managing gold prices with role-based access control",
    "type": "project",
    "keywords": ["gold", "shop", "price-management", "mvc", "php"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Muhammad Sidi",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "delight-im/auth": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse app --level=5",
        "phpcs": "phpcs --standard=PSR12 app",
        "phpcbf": "phpcbf --standard=PSR12 app",
        "db:setup": "php app/config/connection.php --setup",
        "db:create": "php app/config/connection.php --create-db",
        "db:migrate": "php app/config/connection.php --migrate"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
